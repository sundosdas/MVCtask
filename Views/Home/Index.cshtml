}
<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    <!-- Navigation
        ==========================================-->
    <nav id="menu" class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"> <span class="sr-only">Navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="#features" class="page-scroll">Specials</a></li>
                    <li><a href="#about" class="page-scroll">About</a></li>
                    <li><a href="#restaurant-menu" class="page-scroll">Menu</a></li>
                    <li><a href="#contact" class="page-scroll">Contact</a></li>
                    <li><a href="@Url.Action("Register", "Auth")" class="page-scroll">Register</a></li>
                    <li><a href="@Url.Action("Index", "Admin")" class="page-scroll">Admin Dashboard</a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
    </nav>
    <!-- Header -->
    <header id="header">
        <div class="intro">
            <div class="overlay">
                <div class="container">
                    <div class="row">
                        <div class="intro-text">
                            <h1>Twist & Taste </h1>
                            <p>Reservations: (+962) 785964882</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Features Section -->
    <div id="features" class="text-center">
        <div class="container">
            <div class="section-title">
                <h2>Our Specials</h2>
            </div>
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-lg-4">
                        <div class="single_blog_item">
                            <div class="single_blog_img">
                                <img width="330" height="330" src="@Url.Content("~/images/"+item.ImagePath)" alt="">
                            </div>
                            <div class="single_blog_text">
                                <h3>@item.CategoryName</h3>
                                <p> Was brean shed moveth day yielding tree yielding day were female and </p>
                                <a asp-action="GetProductByCategory" asp-route-id="@item.Id" class="btn_3"> View Products </a>
                            </div>
                        </div>
                    </div>
                }
        </div>
    </div>
    <!-- About Section -->
    <div id="about">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-md-6 about-img"> </div>
                <div class="col-xs-12 col-md-3 col-md-offset-1">
                    <div class="about-text">
                        <div class="section-title">
                            <h2>Our Story</h2>
                        </div>
                        <p> Twist & Taste </p>
                        <p>Where every bite tells a story, and every twist brings a new flavor to savor. Duis sed dapibus leo nec ornare.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
